# Daily Vocabulary Notification Configuration
VOCABULARY_NOTIFICATIONS_ENABLED=true
VOCABULARY_NOTIFICATION_TIME=09:00
VOCABULARY_NOTIFICATION_TIMEZONE=UTC
VOCABULARY_NOTIFICATION_RETRY_ATTEMPTS=3
VOCABULARY_NOTIFICATION_RETRY_DELAY=300

# Vocabulary Selection Strategy
VOCABULARY_SELECTION_STRATEGY=priority
VOCABULARY_FALLBACK_TO_RANDOM=true
VOCABULARY_EXCLUDE_RECENT_DAYS=30

# Level-based Targeting (Future Feature)
VOCABULARY_LEVEL_BASED_TARGETING=false
VOCABULARY_DEFAULT_LEVEL=intermediate

# Oxford Dictionary Integration
VOCABULARY_AUTO_GENERATE_OXFORD_URL=true

# Analytics
VOCABULARY_TRACK_INTERACTIONS=true
VOCABULARY_TRACK_CLICK_THROUGH=true
VOCABULARY_ANALYTICS_RETENTION_DAYS=365

# Firebase Cloud Messaging (for mobile app notifications)
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# VAPID Keys (for web push notifications)
# Generate these using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com